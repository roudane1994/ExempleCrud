{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Creation d'un Categorie{% endblock %}

{% block body %}
<div class="container">

    <br><br>
   
    <h2> Liste des Produits</h2>
     <table class="table table-bordered">
    <thead>
      <tr align="center">
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Categorie</th>
        <th scope="col">Supp</th>
        <th scope="col">Modefie</th>
      </tr>
    </thead>
    <tbody>
     {% for produit in produits %}
      <tr align="center">
        <td scope="row">{{produit.name}}</td>
        <td>{{produit.description}}</td>
        <td>{{produit.categorie.name}}</td>
        <td><a href="{{ path('suppProduit', {'id':produit.id}) }}">supp</a></td>
         <td><a href="{{ path('creeProduit', {'id':produit.id}) }}">modefie</a></td>
      </tr>
       {% endfor %}
    </tbody>
  </table>
      <div class="navigation">
    {{ knp_pagination_render(produits) }}
</div>
</div>


{% endblock %}
